{
  "verbose": true,
  "setupFiles": ["jest-localstorage-mock"],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js"
  ],
  "moduleNameMapper": {
    "^@(/.*)$": "<rootDir>/src/$1"
  },
  "transform": {
    "\\.jsx?$": "babel-jest",
    "\\.tsx?$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "/node_modules/(?!konva)/.+\\.js"
  ],
  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig.json"
    }
  },
  "testMatch": [
    "**/test/**/*Spec.+(ts|tsx|js)"
  ]
}
